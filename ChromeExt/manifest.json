{
  "manifest_version": 2,

  "name": "Clarifeyes",
  "description": "Narrating the visual web for the visually impaired.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.min.js", "scrape.js"],
      "css": ["overlay.css"]
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}
